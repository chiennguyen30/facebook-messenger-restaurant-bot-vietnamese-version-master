<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hello with botchat</title>
  </head>

  <body>
    <h1>Hello world with botchat</h1>
    <form action="/setup-profile" method="POST">
      <button type="submit">Setup profile</button>
    </form>
    <!-- Messenger Chat Plugin Code -->
    <div id="fb-root"></div>
    <div id="fb-customer-chat" class="fb-customerchat" page_id="61560848102450">
      <div class="fb-customerchat-message">
        <p>Hello, I'm a bot!</p>
      </div>
      <div class="fb-customerchat-messenger">
        <p>Hello, I'm a messenger!</p>
      </div>
    </div>
    <script>
      var chatbox = document.getElementById("fb-customer-chat");
      chatbox.setAttribute("page_id", "PAGE-ID");
      chatbox.setAttribute("attribution", "biz_inbox");
    </script>
    <script>
      window.fbAsyncInit = function () {
        FB.init({ xfbml: true, version: "API-VERSION" });
      };
      (function (d, s, id) {
        var js,
          fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js";
        fjs.parentNode.insertBefore(js, fjs);
      })(document, "script", "facebook-jssdk");
    </script>
  </body>
</html>
